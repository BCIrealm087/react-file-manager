{
  "name": "@thelicato/react-file-manager",
  "description": "A simple React component to build a Web File Manager",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "homepage": "https://github.com/thelicato/react-file-manager/",
  "author": {
    "name": "thelicato",
    "email": "thelicato@duck.com",
    "url": "https://thelicato.io/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thelicato/react-file-manager.git"
  },
  "bugs": {
    "url": "https://github.com/thelicato/react-file-manager/issues"
  },
  "module": "dist/react-file-manager.esm.js",
  "private": false,
  "size-limit": [
    {
      "path": "dist/react-file-manager.cjs.production.min.js",
      "limit": "100 KB"
    },
    {
      "path": "dist/react-file-manager.esm.js",
      "limit": "100 KB"
    }
  ],
  "dependencies": {
    "react-draggable": "^4.4.5",
    "react-dropzone": "^14.2.2"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.0",
    "@testing-library/react": "^13.4.0",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.12",
    "husky": "^8.0.1",
    "postcss": "^8.4.17",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup-plugin-postcss": "^4.0.2",
    "size-limit": "^8.1.0",
    "tailwindcss": "^3.1.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4"
  }
}
